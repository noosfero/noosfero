<div class="<%= kindify_class(profile, 'vcard') %>">

<% if block.title.present? %>
  <p><%= block.title %></p>
<% end %>

<div class="profile-big-image <%= theme_option(:profile_list_bg_imgs) ? 'bg-pic' : 'img-pic' %>">
  <div class="profile-big-image-inner1">
    <div class="profile-big-image-inner2">
      <%=
        if theme_option(:profile_list_bg_imgs)
          link_to '', profile.url, style: "background-image: url(#{profile_pic profile})"
        else
          link_to profile_image(block.owner, :big) +"\n", profile.url
        end
      %>
    </div>
  </div>
</div>

<% if block.show_name %>
  <p><%= h block.owner.short_name %></p>
<% end %>

<% if !user.nil? and user.has_permission?('edit_profile', profile) %>
  <div class='admin-link'>
    <%= link_to _('Control panel'), block.owner.admin_url %>
  </div>
<% end %>

<div class="profile-info-options">
  <%= render_profile_actions block.owner.class %>
</div>
</div><!-- end class="vcard" -->
