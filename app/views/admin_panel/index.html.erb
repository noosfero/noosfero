<%
  plugin_links = @plugins.dispatch(:admin_panel_links)
%>
<% unless plugin_links.empty? %>
  <h2><%= _('Plugins') %></h2>
  <table>
  <% plugin_links.each do |link| %>
    <tr><td><%= link_to link[:title], link[:url] %></td></tr>
  <% end %>
  </table>
<% end %>

