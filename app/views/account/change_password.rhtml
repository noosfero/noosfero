<h1><%= _('Change password') %></h1>

<% form_tag do %>

<p><label for="password"><%= _('Current password') %>'</label><br/>
<%= password_field_tag :current_password %></p>

<p><label for="password"><%= _('New password') %></label><br/>
<%= password_field_tag :new_password %></p>

<p><label for="password_confirmation"><%= _('Confirm your new Password') %></label><br/>
<%= password_field_tag :new_password_confirmation %></p>

<%= submit_tag _('Change password') %>

<% end %>

