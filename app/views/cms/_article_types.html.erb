<ul class="article-types">
  <% for type in @article_types %>
    <% action = type.name == 'UploadedFile' ? {:action => 'upload_files'} : {:action => 'new', :type => type.name} %>
    <%= content_tag('a', :href => url_for(action.merge(:parent_id => @parent_id, :back_to => @back_to)).html_safe) do %>
      <li class="<%= icon_for_new_article(type).split.map { |s| "big#{s}" }.join(" ") %>">
        <h3><%= type.short_description %></h3>
        <div class='description'><%= type.description %></div>
      </li>
    <% end %>
  <% end %>
</ul>
