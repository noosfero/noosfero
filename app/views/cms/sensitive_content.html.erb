<div id='new-sensitive-content'>
  <div class='publish-container'>

    <div class='publish-header'>
      <%= link_to(profile_image(current_person, :minor), current_person.url) if logged_in? %>
      <div class='publish-header-infos'>
        <%= sensitive_context_message @sensitive_content %>
        <%= path_to_parents @sensitive_content.directory %>
      </div>
    </div>

    <div class='new-sensitive-content-container scrollbar'>
      <h2><%= _('What do you want to publish?') %></h2>
      <%= render :partial => 'cms/article_types', locals: {
            article_types: @sensitive_content.content_options,
            parent_id: @sensitive_content.directory.try(:id) } %>
    </div>

    <div class='publish-options'>
      <%= button(:back, "<span>#{_('Back')}</span>".html_safe, '#', :class => 'option-back') %>
      <div class='sensitive-buttons'>

        <%= modal_button(:folder, _('Post to another directory'),
              url_for(:controller => 'cms', :action => 'sensitive_content', :profile => user.identifier,
                :page => @sensitive_content.directory.try(:id), :select_directory => true), :class => 'option-folder') %>

        <%= modal_button(:profile, _('Post to another profile'),
              url_for(:controller => 'cms', :action => 'select_profile', :profile => user.identifier),
              :class => 'option-profile') %>
      </div>
    </div>

  </div>
</div>
