
<% if @favorite_links_pages.current.previous%>
  <%= design_link_to_remote(_('Previous'), :url => {:action => 'index', :page => @favorite_links_pages.current.previous}) %>
<% end %>
<% if @favorite_links_pages.current.next %>
  <%= design_link_to_remote(_('Next'), :url => {:action => 'index', :page => @favorite_links_pages.current.next}) %>
<% end %>

<% @favorite_links.each do |link| %>
  <ul>
    <li>
      <%= link_to link, link, :popup => true %>
    </li>
  </ul>
<% end %>

